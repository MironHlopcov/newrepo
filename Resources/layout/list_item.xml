<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sum_TextView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deskription_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_marginEnd="88dp"
        android:layout_toEndOf="@id/sum_TextView"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:maxLines="1"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mcc_code_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="12dp"
        android:layout_marginEnd="88dp"
        android:layout_toEndOf="@id/sum_TextView"
        android:layout_below="@+id/deskription_TextView"
        android:ellipsize="end"
        android:maxLines="2"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/data_TextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd = "true"
        android:textColor="#7F3F97"
        android:textAlignment="textEnd"
        android:ellipsize="end"
        android:maxLines="1"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time_TextView"
        android:layout_below="@+id/data_TextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd = "true"
        android:textColor="#7F3F97"
        android:textAlignment="textEnd"
        android:ellipsize="end"
        android:maxLines="1"/>
</RelativeLayout>